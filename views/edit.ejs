<%- include("partials/header.ejs") %>

<div class="container">
    <h1>Edit Post</h1>
    <form action="/edit-post/<%= id %>" method="POST">
        <div class="form-group">
            <label for="post-title" class="col-form-label">Title:</label>
            <input type="text" class="form-control" id="post-title" name="title" value="<%= title %>">
        </div>
        <div class="form-group">
            <label for="post-content" class="col-form-label">Content:</label>
            <textarea class="form-control" id="post-content" name="content" rows="10"><%= content %></textarea>
        </div>
        <div class="modal-footer mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>

<%- include("partials/footer.ejs") %>
